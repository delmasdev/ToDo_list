<li class="list-group-item " id="<%= @email.object  %>">
  <div class="container text-center">
  <h1><%= @email.object %></h1>
  <h3><%= @email.body %></h3>
<%= link_to "supprimer", email_path(email.id), :method => :delete, class: "btn btn-secondary btn-lg ", remote: true %>
 <% if @email.read != false %>
  <%= link_to 'marquer comme non-lu', email_path(email.id), :method => :put, class: 'btn btn-primary btn-lg' , id: 'noread', data: { params: {read: false}.to_param }, remote: true %>
   <% else %>
    <%= link_to 'marquer comme lu', email_path(email.id), :method => :put, class: 'btn btn-primary btn-lg' , id: 'noread', data: { params: {read: true}.to_param }, remote: true %>
  <% end %>
</div>
</li>